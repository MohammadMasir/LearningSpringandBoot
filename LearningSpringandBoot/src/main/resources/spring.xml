<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
	<bean id="dev" class="com.myapp.Dev">
	<!--  	<property name="laptop" ref="Lap"/>  "property" tag is used for setter injection. --> 
			<constructor-arg name="laptop" ref="Lap"/> <!-- "constructor-arg" is used for CDI -->
	</bean>
	
	<bean id="Lap" class="com.myapp.Laptop"> <!-- try using ""com.myapp.Dev" instead of "com.myapp.Laptop"-->
		
		
	</bean>

</beans>